<!--Form User Dictionary-->
<main class="container mt-5">
    <div class="d-flex justify-content-between p-3 my-3 text-white bg-purple rounded shadow-sm">
        <div class="d-block">
            <img class="me-3" src="/logo/bootstrap-logo.svg" alt="" width="48" height="38">
            <small><a href="/post/create" class="btn btn-light btn mt-1">Add Post</a></small>
        </div>
        <form class="d-flex">
            <input class="form-control me-2" name="search" value="<%=searchQuery%>" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>

    </div>
    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <h6 class="border-bottom pb-2 mb-0">All posts</h6>
        <div class="d-flex text-muted pt-3">
            <div class="container">
                <div class="row">
                    <div class="d-flex justify-content-evenly">

                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Files</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%for(let index in data){%>
                                <tr>
                                    <th scope="row"><%= +index+1 %></th>
                                    <td><%= data[index]['title']%></td>
                                    <td><%= data[index]['description']%></td>
                                    <td><img src="<%=data[index]['imgUrl']%>" class="img-thumbnail" width="50vw" alt="..."></td>
                                    <td>
                                        <a href="/post/<%=data[index]['id']%>" class="btn btn-success btn-sm">‚Äçüó®Ô∏è View</a>
                                        <a href="/post/edit/<%= data[index]['id']%>" class="btn btn-warning btn-sm">üñãÔ∏èEdit</a>
                                        <a href="/post/delete/<%= data[index]['id']%>" class="btn btn-danger btn-sm">üóëÔ∏è Delete</a>
                                    </td>
                                </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>