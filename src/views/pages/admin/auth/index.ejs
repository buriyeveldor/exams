<!--Form User Dictionary-->
<main class="container mt-5">
    <div class="d-flex  justify-content-between p-3 my-3 text-white bg-purple rounded shadow-sm">
        <div class="d-block">
            <img class="me-3" src="/logo/bootstrap-logo.svg" alt="" width="48" height="38">
            <small><a href="/admin/user/create" class="btn btn-light btn mt-1">Add Users</a></small>
        </div>
    </div>
    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <h6 class="border-bottom pb-2 mb-0">All users</h6>
        <div class="d-flex text-muted pt-3">
            <div class="container">
                <div class="row">
                    <div class="d-flex justify-content-evenly">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Fullname</th>
                                <th scope="col">Username</th>
                                <th scope="col">Password</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%for(let index in data){%>
                                <tr>
                                    <th scope="row"><%= +index+1 %></th>
                                    <td><%= data[index]['fullname']%></td>
                                    <td><%= data[index]['username']%></td>
                                    <td><%= data[index]['password']%></td>
                                    <td>
                                        <a href="/admin/user/edit/<%= data[index]['id']%>" class="btn btn-warning btn-sm">üñãÔ∏è Edit</a>
                                        <a href="/admin/user/delete/<%= data[index]['id']%>" class="btn btn-danger btn-sm">üóëÔ∏è Delete</a>
                                    </td>
                                </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
